# ==================== 项目信息 ====================
PROJECT_NAME=DataSemanticHub
ENVIRONMENT=dev

# ==================== 数据库配置 ====================
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=datasemantichub
DB_USER=root
DB_PASSWORD=Change_Me_Please_123!

# ==================== Redis 配置 ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== Kafka 配置 ====================
KAFKA_BROKERS=kafka:9092
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181

# ==================== OpenSearch 配置 ====================
OPENSEARCH_HOSTS=http://opensearch:9200
OPENSEARCH_PORT=9200
OPENSEARCH_PERF_PORT=9600
OPENSEARCH_DASHBOARDS_PORT=5601

# ==================== 认证配置 ====================
JWT_SECRET=Change_This_Secret_Key_To_Something_Very_Secure_123456
JWT_EXPIRE=7200

# ==================== 可观测性配置 ====================
# Jaeger
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_HTTP_PORT=14268
JAEGER_COLLECTOR_UDP_PORT=6831

# Prometheus
PROMETHEUS_ENDPOINT=http://prometheus:9090
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ==================== 应用服务端口 ====================
FRONTEND_PORT=5173
SYSTEM_SERVICE_PORT=8888
METADATA_SERVICE_PORT=8889
JAVA_SERVICE_PORT=8890
PYTHON_SERVICE_PORT=8891
AGENT_UI_PORT=8501

# ==================== 日志配置 ====================
LOG_LEVEL=info
LOG_MODE=console

# ==================== AI 配置 (Vanna) ====================
# Option 1: Vanna Remote (Recommended/Default)
VANNA_API_KEY=
VANNA_MODEL=

# Option 2: Local (OpenAI + ChromaDB) - fallback if Vanna keys not provided
OPENAI_API_KEY=
LLM_MODEL=gpt-3.5-turbo
LLM_BASE_URL=
USE_OLLAMA=false

# Option 3: Local Ollama (optional, used only when USE_OLLAMA=true)
OLLAMA_MODEL=qwen2.5-coder:7b
OLLAMA_HOST=http://host.docker.internal:11434
